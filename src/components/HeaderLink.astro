---
export interface Props {
	href: string;
	class?: string;
	[key: string]: any;
}

const { href, class: className = "", ...rest } = Astro.props;

// Obtener la URL actual para determinar si el enlace está activo
const { pathname } = Astro.url;
const isActive =
	pathname === href || (href !== "/" && pathname.startsWith(href));
---

<a
	href={href}
	class={`header-link ${isActive ? "active" : ""} ${className}`}
	aria-current={isActive ? "page" : undefined}
	{...rest}
>
	<slot />
</a>

<style>
	.header-link {
		position: relative;
		display: inline-block;
		padding: 0.75rem 1rem;
		font-weight: 500;
		font-size: 1.2rem;
		color: var(--qs-dark);
		text-decoration: none;
		border-radius: 0.5rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		overflow: hidden;
	}

	/* Efecto de fondo en hover */
	.header-link::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			90deg,
			rgba(var(--qs-accent-rgb), 0.1) 0%,
			rgba(var(--qs-cta-rgb), 0.7) 100%
		);
		opacity: 0;
		transition: opacity 0.3s ease;
		z-index: -1;
	}

	/* Borde inferior animado */
	.header-link::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 50%;
		width: 0;
		height: 2px;
		background: linear-gradient(
			90deg,
			rgba(var(--qs-accent-rgb), 0.8) 0%,
			rgba(var(--qs-cta-rgb), 0.4) 100%
		);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		transform: translateX(-50%);
	}

	/* Estados hover */
	.header-link:hover {
		color: var(--qs-dark);
		transform: translateY(-2px);
	}

	.header-link:hover::before {
		opacity: 1;
	}

	.header-link:hover::after {
		width: 80%;
	}

	/* Estado activo */
	.header-link.active {
		color: var(--qs-accent-blue);
		font-weight: 600;
	}

	.header-link.active::before {
		opacity: 1;
		background: linear-gradient(
			135deg,
			rgba(var(--qs-accent-rgb), 0.05) 0%,
			rgba(var(--qs-cta-rgb), 0.2) 100%
		);
	}

	.header-link.active::after {
		width: 100%;
		height: 3px;
		background: linear-gradient(
			90deg,
			rgba(var(--qs-accent-rgb), 0.9) 0%,
			rgba(var(--qs-cta-rgb), 0.6) 100%
		);
	}

	/* Efecto de presión */
	.header-link:active {
		transform: translateY(0);
	}

	/* Estilos para móvil */
	@media (max-width: 1023px) {
		.header-link {
			display: block;
			width: 100%;
			text-align: center;
			padding: 1rem;
			margin: 0.25rem 0;
			border-radius: 0.375rem;
		}

		.header-link::after {
			display: none;
		}

		.header-link::before {
			border-radius: 0.375rem;
		}

		.header-link:hover {
			transform: translateX(5px);
			background-color: rgba(255, 255, 255, 0.1);
		}

		.header-link.active {
			background-color: rgba(255, 255, 255, 0.15);
			transform: translateX(5px);
		}
	}

	/* Animación de entrada suave */
	.header-link {
		animation: fadeInUp 0.5s ease-out forwards;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Efecto de brillo sutil */
	.header-link:hover {
		box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
	}

	.header-link.active {
		box-shadow: 0 4px 20px rgba(255, 255, 255, 0.15);
	}

	/* Transición suave para el focus */
	.header-link:focus {
		outline: 2px solid rgba(255, 255, 255, 0.5);
		outline-offset: 2px;
	}
</style>
