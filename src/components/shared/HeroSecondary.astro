---
import Breadcrumb from "./Breadcrumb.astro";

const { title, description, image, imagethumb, slug } = Astro.props;

const url = Astro.url.pathname;
---

<div class="hero-secondary">
    <img
        src={image || "/images/home/campo-raiz-viva.webp"}
        srcset={`${imagethumb} 767w, ${image} `}
        class="image-background"
        alt=""
    />

    <div class="hero-content-wrapper">
        <div class="text-center">
            <h1
                class="animate__animated animate__fadeInLeft animate__delay-0s font-secondary max-w-2xl mb-4 text-4xl text-white md:text-5xl xl:text-6xl"
            >
                {title}
            </h1>
        </div>
    </div>

    <Breadcrumb url={url} title={title} class="" />
</div>

<style define:vars={{ image }}>
    .hero-secondary {
        position: relative;
        min-height: 500px;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        overflow: hidden;
    }

    /* Degradado superpuesto sobre la imagen */
    .hero-secondary::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.7) 0%,
            rgba(0, 0, 0, 0.3) 60%,
            transparent 100%
        );
        z-index: 0;
        pointer-events: none;
    }

    .hero-secondary h1 {
        text-shadow:
            1px 4px 2px black,
            0 0 1em gray,
            0 0 0.1em gray;
    }

    .hero-secondary p {
        text-shadow:
            2px 2px 2px var(--rv-dark),
            0 0 2em var(--rv-dark),
            0 0 0.3em var(--rv-dark);
    }

    .image-background {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        object-fit: cover;
        z-index: -1;
    }

    .text-shadow-lg {
        text-shadow: -4px -4px 8px var(--rv-bg-light-rgb);
    }

    .image-secondary {
        transition: transform 0.3s ease-in-out;
    }

    .image-secondary:hover {
        transform: scale(1.1);
        filter: saturate(1.2);
    }

    .hero-content-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        min-height: 500px;
        padding-top: 100px;
        position: relative;
        z-index: 1;
        text-align: center;
    }

    @media (max-width: 767px) {
        .hero-secondary::after {
            background: linear-gradient(
                to top,
                rgba(0, 0, 0, 0.8) 0%,
                rgba(0, 0, 0, 0.4) 50%,
                transparent 100%
            );
        }
    }
</style>